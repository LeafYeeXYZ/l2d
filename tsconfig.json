{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ESNext", "DOM"],
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    /* Linting */
    // "strict": true,
    // "noFallthroughCasesInSwitch": true,
    // "noImplicitAny": false,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    /* Bundler mode */
    "declaration": true,
    "noEmit": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["lib", "dist"]
}
